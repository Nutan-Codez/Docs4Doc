<% if (user.files.length > 0) { %>
    <% user.files.forEach(function(file) { %>
        <div class="file-preview">
            <h4>
                <% if (file.description && file.description.length > 0) { %>
                    <%= file.description %>
                <% } else { %>
                    NO Description
                <% } %>
            </h4>
            <% console.log(user.files); %>
            <h4><% 
                var fileDate = new Date(file.date);
                
                // Extract date components
                var day = fileDate.getDate(); // Day of the month
                var month = fileDate.getMonth() + 1; // Month (0-based index)
                var year = fileDate.getFullYear(); // Full year
                
                // Format the date as DD-MM-YYYY or YYYY-MM-DD
                var formattedDate = `${day}-${month}-${year}`; // Change format as needed
            %>
            <%= formattedDate %></h4>
            <iframe src="/uploads/<%= file.file %>" type="application/pdf" width="100%" height="600px"></iframe>
        </div>
    <% }); %>
<% } else { %>
    <p>No files uploaded yet.</p>
<% } %>
